<!DOCTYPE html>
<html lang="es-mx">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | App de Blogs</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Google+Sans:ital,opsz,wght@0,17..18,400..700;1,17..18,400..700&family=National+Park:wght@200..800&display=swap" rel="stylesheet">
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <h2>App de Blogs</h2>
        <div class="header-user-options">
            <a href="javascript:">Registrarme</a>
            <a href="javascript:">Iniciar sesión</a>
        </div>
    </header>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
    <footer>
        <span class="footer-legend">2025 - App de Blogs</span>        
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
